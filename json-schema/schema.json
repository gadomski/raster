{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stac-extensions.github.io/raster/v1.0.0/schema.json#",
  "title": "raster Extension",
  "description": "STAC Raster Extension for STAC Items.",
  "oneOf": [
    {
      "$comment": "This is the schema for STAC extension raster in Items.",
      "allOf": [
        {
          "type": "object",
          "required": [
            "type",
            "properties",
            "assets"
          ],
          "properties": {
            "type": {
              "const": "Feature"
            },
            "properties": {
              "allOf": [
                {
                  "$ref": "#/definitions/itemfields"
                }
              ]
            },
            "assets": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/assetfields"
              }
            }
          }
        },
        {
          "$ref": "#/definitions/stac_extensions"
        }
      ]
    },
    {
      "$comment": "This is the schema for STAC Collections.",
      "allOf": [
        {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "const": "Collection"
            },
            "assets": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/itemfields"
              }
            },
            "item_assets": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/itemfields"
              }
            }
          }
        }
      ]
    }
  ],
  "definitions": {
    "stac_extensions": {
      "type": "object",
      "required": [
        "stac_extensions"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://stac-extensions.github.io/raster/v1.0.0/schema.json"
          }
        }
      }
    },
    "itemfields": {
      "$comment": "Add your new fields here. Don't require them here, do that above in the item schema.",
      "type": "object",
      "properties": {
        "raster:composites": {
          "$ref": "#/definitions/composites"
        }
      },
      "patternProperties": {
        "^(?!raster:)": {
          "$comment": "Above, change `template` to the prefix of this extension"
        }
      },
      "additionalProperties": false
    },
    "assetfields": {
      "type": "object",
      "properties": {
        "raster:bands": {
          "$ref": "#/definitions/bands"
        }
      },
      "patternProperties": {
        "^(?!raster:)": {
          "$comment": "Above, change `template` to the prefix of this extension"
        }
      },
      "additionalProperties": false
    },
    "bands": {
      "title": "Bands",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Band",
        "type": "object",
        "minProperties": 1,
        "additionalProperties": false,
        "properties": {
          "data_type": {
            "title": "Data type of the band",
            "type": "string",
            "enum": [
              "int8",
              "int16",
              "int32",
              "int64",
              "uint8",
              "uint16",
              "uint32",
              "uint64",
              "float16",
              "float32",
              "float64",
              "cint16",
              "cint32",
              "cfloat32",
              "cfloat64",
              "other"
            ]
          },
          "nbits": {
            "title": "The actual number of bits used for this band",
            "type": "integer"
          },
          "sampling": {
            "title": "Pixel sampling in the band",
            "type": "string",
            "enum": [
              "area",
              "point"
            ]
          },
          "nodata": {
            "title": "No data pixel value",
            "type": "number"
          },
          "stats_mean": {
            "title": "Mean value of all the pixels in the band",
            "type": "number"
          },
          "stats_min": {
            "title": "Minimum value of all the pixels in the band",
            "type": "number"
          },
          "stats_max": {
            "title": "Maximum value of all the pixels in the band",
            "type": "number"
          },
          "stats_stddev": {
            "title": "Standard deviation value of all the pixels in the band",
            "type": "number"
          },
          "stats_valid_percent": {
            "title": "Percentage of valid (not nodata) pixel",
            "type": "number"
          },
          "overview_max_gsd": {
            "title": "The maximum Ground Sample Distance represented in an overview",
            "type": "number"
          },
          "color_interpretation": {
            "title": "The color interpretation of the pixels in the bands",
            "type": "string"
          },
          "values": {
            "title": "Dictionary of value objects that can be computed",
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "required": [
                "unit"
              ],
              "properties": {
                "unit": {
                  "title": "Unit denomination of the value",
                  "type": "string"
                },
                "from": {
                  "title": "Key of another object value to be the source",
                  "type": "string"
                },
                "scale": {
                  "title": "Multiplicator factor of the pixel value",
                  "type": "number"
                },
                "offset": {
                  "title": "Number to be added to the pixel value",
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    "composites": {
      "title": "Band Compositions",
      "type": "array",
      "minItems": 1,
      "items": {
        "title": "Band",
        "type": "object",
        "minProperties": 1,
        "additionalProperties": false,
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "title": "Denomination of the band composition",
            "type": "string"
          },
          "nodata": {
            "title": "No data pixel value",
            "type": "number"
          },
          "range": {
            "title": "Range of valid pixels values in the composition",
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "type": "number"
            }
          },
          "bands": {
            "title": "An ordered array of band selector",
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "string"
            }
          },
          "expression": {
            "title": "Band math expression",
            "type": "string"
          },
          "resampling_method": {
            "title": "Resampling method",
            "type": "string"
          },
          "color_map": {
            "title": "Identifier of a color mapping",
            "type": "string"
          }
        }
      }
    }
  }
}